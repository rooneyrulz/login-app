<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <meta http-equiv="X-UA-Compatible" content="ie=edge">
   <link rel="stylesheet" href="/css/bootstrap.min.css">
   <link rel="stylesheet" href="/css/main.css">
   <title>Login App</title>
</head>
<body>
   <main>
      <header id="main-header">
         <nav class="navbar navbar-dark navbar-expand-lg p-0">
            <div class="container">
               <a href="#" class="navbar-brand">Login App</a>
               <button type="button" id="btn-menu" class="navbar-toggler collapsed" data-toggle="collapse" data-target="#menu-collapse" aria-hidden="false">
                  <span class="navbar-toggler-icon"></span>
                </button>
               <div class="collapse navbar-collapse" id="menu-collapse">
                  <ul class="nav navbar-nav mr-auto">
                     <li class="nav-item">
                        <a class="nav-link" href="/home">Home</a>
                     </li>
                     <li class="nav-item">
                        <a class="nav-link" href="#">Search</a>
                     </li>
                  </ul>
                  <ul class="nav navbar-nav">
                     <li class="nav-item">
                        <a href="/user/register" class="nav-link">Register</a>
                     </li>
                     <li class="nav-item">
                        <a class="nav-link" href="/user/Login">Login</a>
                     </li>
                  </ul>
               </div>
            </div>
         </nav>
      </header>
      <section>
         <div class="container mt-4">
            <div class="container">
               <!-- Flash Messages-->
               {{#if success_message}}
                  <div class="alert alert-success">
                     {{success_message}}
                     <button class="btn-close" type="button" name="button">
                        &times;
                     </button>
                  </div>
               {{/if}}
               {{#if error_message}}
                  <div class="alert alert-danger">
                     {{error_message}}
                     <button class="btn-close" type="button" name="button">
                        &times;
                     </button>
                  </div>
               {{/if}}
               {{#if error}}
                  <div class="alert alert-danger">
                     {{error}}
                     <button class="btn-close" type="button" name="button">
                        &times;
                     </button>
                  </div>
               {{/if}}

               <!--Validation Errors-->
               {{#if errors}}
                  {{#each errors}}
                     <div class="alert alert-danger">
                        {{msg}}
                        <button class="btn-close" type="button" name="button">
                           &times;
                        </button>
                     </div>
                  {{/each}}
               {{/if}}
            </div>
            {{{body}}}
         </div>
      </section>
   </main>

   <!--Scripts-->
   <script src="/js/bootstrap.min.js" charset="utf-8"></script>
   <script src="/scripts/jquery.min.js" charset="utf-8"></script>
   <script src="/js/scripts.js" charset="utf-8"></script>
</body>
</html>
